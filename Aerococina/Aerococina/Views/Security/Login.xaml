            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image x:Name="imgLogo"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />
        <Entry x:Name="txtEmail"   Text="jesus_rios91@hotmail.com" Placeholder="Nombre Usuario" Grid.Row="2" Grid.ColumnSpan="2" />
        <Entry x:Name="txtPassword" Text="Legendary2017." Placeholder="Contrasena" IsPassword="true" Grid.Row="3" Grid.ColumnSpan="2"  />


        <Button x:Name="btnIniciarSesion" TextColor="White" BackgroundColor="#003454" Text="Iniciar Sesion" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Clicked="btnIniciarSesion_Handle_Clicked"/>
   
        </Grid>
